    <groupId>org.apache.servicemix.bundles</groupId>
    <artifactId>org.apache.servicemix.bundles.hadoop-client</artifactId>
    <version>2.3.0_1</version>
    <packaging>bundle</packaging>
    <name>Apache ServiceMix :: Bundles :: hadoop-client</name>
    <description>This OSGi bundle wraps  ${pkgVersion} jar files.</description>

    <properties>
        <pkgGroupId>org.apache.hadoop</pkgGroupId>
        <pkgVersion>2.3.0</pkgVersion>
        <servicemix.osgi.export.pkg>
            org.apache.hadoop
        </servicemix.osgi.export.pkg>
        <servicemix.osgi.import.pkg>
            com.google.common*,
            com.google.inject.binder;version="[1.3,2)",
            com.google.inject.servlet;version="[1.3,2)",
            com.google.inject;version="[1.3,2)",
            com.google.protobuf;version="[2.5,3)",
            com.jcraft.jsch,
            javax.annotation,
            javax.crypto*,
            javax.management*,
            javax.naming*,
            javax.net*,
            javax.security.auth*,
            javax.security.sasl,
            javax.servlet,
            javax.servlet.http,
            javax.servlet.jsp;resolution:=optional,
            javax.ws.rs*;resolution:=optional,
            javax.xml.bind*;resolution:=optional,
            javax.xml.parsers,
            javax.xml.transform*,
            org.xml.sax*,
            org.w3c.dom,
            com.sun.jersey*;resolution:=optional,
            org.apache.avro*,
            org.apache.commons.cli;version="[1.2,2)";resolution:=optional,
            org.apache.commons.codec.binary;version="[1.4,2)",
            org.apache.commons.codec.digest;version="[1.4,2)",
            org.apache.commons.codec;version="[1.4,2)",
            org.apache.commons.collections.map;version="[3.2,4)",
            org.apache.commons.collections;version="[3.2,4)",
            org.apache.commons.compress.archivers.tar;version="[1.4,2)",
            org.apache.commons.configuration;version="[1.6,2)",
            org.apache.commons.daemon;version="[1.0,2)";resolution:=optional,
            org.apache.commons.httpclient*,
            org.apache.commons.io.input;version="[1.4,2)",
            org.apache.commons.io;version="[1.4,2)",
            org.apache.commons.lang.builder;version="[2.6,3)",
            org.apache.commons.lang.math;version="[2.6,3)",
            org.apache.commons.lang.time;version="[2.6,3)",
            org.apache.commons.lang;version="[2.6,3)",
            org.apache.commons.logging.impl;version="[1.1,2)",
            org.apache.commons.logging;version="[1.1,2)",
            org.apache.commons.math3.util;version="[3.1,4)",
            org.apache.commons.net.ftp;version="[3.1,4)",
            org.apache.commons.net.util;version="[3.1,4)",
            org.apache.http;resolution:=optional,
            org.apache.http.client.utils;resolution:=optional,
            org.apache.log4j*;resolution:=optional,
            org.apache.jasper.runtime;resolution:=optional,
            org.apache.tools.ant;resolution:=optional,
            org.apache.tools.ant.types;resolution:=optional,
            org.apache.zookeeper.data;version="[3.4,4)",
            org.apache.zookeeper;version="[3.4,4)",
            org.codehaus.jackson*;version="[1.8,2)",
            org.jboss.netty.bootstrap;version="[3.6,4)",
            org.jboss.netty.buffer;version="[3.6,4)",
            org.jboss.netty.channel.group;version="[3.6,4)",
            org.jboss.netty.channel.socket.nio;version="[3.6,4)",
            org.jboss.netty.channel;version="[3.6,4)",
            org.jboss.netty.handler.codec.frame;version="[3.6,4)",
            org.jboss.netty.handler.codec.http;version="[3.6,4)",
            org.jboss.netty.handler.ssl;version="[3.6,4)",
            org.jboss.netty.handler.stream;version="[3.6,4)",
            org.jboss.netty.util;version="[3.6,4)",
            org.mortbay.io;version="[6.1,8)";resolution:=optional,
            org.mortbay.jetty.handler;version="[6.1,8)";resolution:=optional,
            org.mortbay.jetty.nio;version="[6.1,8)";resolution:=optional,
            org.mortbay.jetty.security;version="[6.1,8)";resolution:=optional,
            org.mortbay.jetty.servlet;version="[6.1,8)";resolution:=optional,
            org.mortbay.jetty;version="[6.1,8)";resolution:=optional,
            org.mortbay.jetty.webapp;version="[6.1,8)";resolution:=optional,
            org.mortbay.log;version="[6.1,8)";resolution:=optional,
            org.mortbay.thread;version="[6.1,8)";resolution:=optional,
            org.mortbay.util.ajax;version="[6.1,8)";resolution:=optional,
            org.mortbay.util;version="[6.1,8)";resolution:=optional,
            sun.net*;resolution:=optional,
            org.ietf.jgss;resolution:=optional,
            org.jets3t.service*;resolution:=optional,
            org.slf4j;version="[1.7,2)",
            org.znerd.xmlenc;resolution:=optional,
            com.sun.org.apache.xml.internal.serialize,
            com.sun.tools.doclets.standard,
            jdiff;resolution:=optional,
            sun.misc;resolution:=optional,
            sun.nio.ch;resolution:=optional,
            com.sun.javadoc;resolution:=optional,
            com.sun.jndi.ldap;resolution:=optional
        </servicemix.osgi.import.pkg>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-common</artifactId>
            <version>${pkgVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-hdfs</artifactId>
            <version>${pkgVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-mapreduce-client-app</artifactId>
            <version>${pkgVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-yarn-api</artifactId>
            <version>${pkgVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-mapreduce-client-core</artifactId>
            <version>${pkgVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-mapreduce-client-jobclient</artifactId>
            <version>${pkgVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-annotations</artifactId>
            <version>${pkgVersion}</version>
        </dependency>

        <!-- sources -->
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-common</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-hdfs</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-mapreduce-client-app</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-yarn-api</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-mapreduce-client-core</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-mapreduce-client-jobclient</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>hadoop-annotations</artifactId>
            <version>${pkgVersion}</version>
            <classifier>sources</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>${pkgGroupId}:hadoop-common</include>
                                    <include>${pkgGroupId}:hadoop-hdfs</include>
                                    <include>${pkgGroupId}:hadoop-mapreduce-client-app</include>
                                    <include>${pkgGroupId}:hadoop-yarn-api</include>
                                    <include>${pkgGroupId}:hadoop-mapreduce-client-core</include>
                                    <include>${pkgGroupId}:hadoop-mapreduce-client-jobclient</include>
                                    <include>${pkgGroupId}:hadoop-annotations</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-common</artifact>
                                    <includes>
                                        <include>META-INF/services/*</include>
                                        <include>core-default.xml</include>
                                        <include>common-version-info.properties</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-hdfs</artifact>
                                    <includes>
                                        <include>META-INF/services/*</include>
                                        <include>hdfs-default.xml</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-mapreduce-client-app</artifact>
                                    <includes>
                                        <include>META-INF/services/*</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-yarn-api</artifact>
                                    <excludes>
                                        <exclude>**/*</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-mapreduce-client-core</artifact>
                                    <includes>
                                        <include>META-INF/services/*</include>
                                        <include>mapred-default.xml</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-mapreduce-client-jobclient</artifact>
                                    <includes>
                                        <include>META-INF/services/*</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>${pkgGroupId}:hadoop-annotations</artifact>
                                    <excludes>
                                        <exclude>**/*</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


  <scm>
    <connection>scm:svn:http://svn.apache.org/repos/asf/servicemix/smx4/bundles/tags/org.apache.servicemix.bundles.hadoop-client-2.3.0_1</connection>
    <developerConnection>scm:svn:https://svn.apache.org/repos/asf/servicemix/smx4/bundles/tags/org.apache.servicemix.bundles.hadoop-client-2.3.0_1</developerConnection>
    <url>http://svn.apache.org/viewvc/servicemix/smx4/bundles/tags/org.apache.servicemix.bundles.hadoop-client-2.3.0_1</url>
